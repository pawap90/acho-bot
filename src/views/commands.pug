style. 
    body {
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        font-size: 10px;
        background-color: #202533;
        color: #f5f5f5;
    }
    h1 {
        color: #B468D8;
    }
    table {
        padding-top: 20px;
        border-collapse: collapse;
        font-size: small;
    }
    td {
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
        border-bottom: solid 1px #343D56;
        background-color: #202533;
        color: #CA7CEE;
    }
    code {
        font-size: 11px;
        color: #f5f5f5;
    }
    .permissions {
        color: #B468D8;
        font-size: x-small;
        padding-left: 10px;
    }
    #container {
        background-color: #202533;
        color: #f5f5f5;
        width: 320px;
        min-height: 100px;
    }
    .canvas {
        border-style: solid;
        border-color: #f5f5f5;
        height: 320px;
        width: 100%;
    }

h1 AchoBot Commands
div#container
    table
        tbody 
            each command in commands
                tr 
                    td 
                        code #{command.CommandName}
                        p.permissions #{command.Permissions}
                    td #{command.Description}

if mode == "image"
    h3 Download this image for your Twitch panels

    script(src="https://html2canvas.hertzen.com/dist/html2canvas.min.js") 
    script. 
        const container = document.getElementById("container");
        html2canvas(container).then(function(canvas) {
            document.body.appendChild(canvas);
            canvas.classList.add("canvas");
            container.style.display = "none";
        });